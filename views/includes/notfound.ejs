<% layout("/layouts/boilerplate") %>

<style>
  .not-found-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    flex-direction: column;
    text-align: center;
  }
  .not-found-title {
    font-size: 3rem;
    color: #ff5a5f;
    margin-bottom: 1rem;
  }
  .not-found-message {
    font-size: 1.2rem;
    color: #6c757d;
    margin-bottom: 2rem;
  }
</style>

<div class="container not-found-container">
  <h1 class="not-found-title">Oops! No Results Found</h1>
  <p class="not-found-message">
    We couldn't find any destinations matching "<strong><%= search %></strong
    >".<br />
    Try searching again or go back to the homepage.
  </p>
  <div class="mt-4">
    <a href="/" class="btn btn-outline-danger">Back to Home</a>
  </div>
</div>
